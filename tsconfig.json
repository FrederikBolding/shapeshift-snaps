{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "ES2017"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./build",
    "sourceMap": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "target": "ES2017",
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  }
}